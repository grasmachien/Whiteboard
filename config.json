{
  "stylesheets": {
    "src":{
      "folder": "./_scss",
      "file":"**/*.scss"
    },
    "dest": {
      "folder":"./css",
      "file":"screen.css"
    }
  },
  "fonts": {
    "dest": {
      "folder":"./fonts"
    }
  },
  "scripts": {
    "src":{
      "folder": "./_js",
      "file": "*.js"
    },
    "dest": {
      "folder":"./js"
    }
  },
  "vendor": {
    "src": {
      "folder": "./bower_components",
      "file": "**"
    },
    "dest": {
      "file": "vendor.js"
    }
  }
}
